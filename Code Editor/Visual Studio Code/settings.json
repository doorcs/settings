// `Preferences: Open User Settings (JSON)` 실행 후 붙여넣기
{
  "telemetry.telemetryLevel": "crash",
  "redhat.telemetry.enabled": false, // tememetry X
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Catppuccin Mocha", // 에디터 테마
  "catppuccin.accentColor": "blue", // 강조 색상 변경
  "catppuccin.italicComments": false,
  "catppuccin.italicKeywords": false, // 이탤릭체 제거
  "workbench.iconTheme": "vscode-icons",
  "vsicons.dontShowNewVersionMessage": true,
  "explorer.sortOrder": "type", // 폴더, 파일, 확장자별 정렬
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": false,
  "editor.fontFamily": "Menlo, D2Coding", // 한글 표시용 D2Coding fallback
  "editor.fontSize": 14.5,
  "editor.lineHeight": 1.2,
  "editor.detectIndentation": true, // 파일의 indent 감지
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary", // 공백이 연속으로 두개 이상일 때만 렌더링 (한 칸 공백은 표시 X)
  "editor.minimap.enabled": false, // 미니맵 X
  "editor.autoIndentOnPaste": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "modifications", // 버전 관리되는 파일에서만 save on format 적용
  "editor.cursorBlinking": "solid", // 커서 깜빡임 X
  "files.autoSave": "onWindowChange",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "debug.inlineValues": "on",
  "git.confirmSync": false,
  "code-runner.enableAppInsights": false, // telemetry X
  "code-runner.customCommand": "",
  "code-runner.ignoreSelection": true,
  "code-runner.runInTerminal": true,
  "code-runner.preserveFocus": false,
  "code-runner.saveFileBeforeRun": true, // 이거 필수!!
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    "c": "cd $dir && gcc -std=c99 $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "cpp": "cd $dir && g++ -std=c++20 -Wall $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt", // `-std` 플래그 필수!
    "python": "python3 -u",
    "java": "cd $dir && javac $fileName && java $fileNameWithoutExt",
    "javascript": "node",
    "typescript": "ts-node",
    "swift": "swift",
    "go": "go run",
    "rust": "cd $dir && rustc $fileName && $dir$fileNameWithoutExt",
    "elixir": "mix run",
    "lisp": "sbcl --script",
    "clojure": "lein exec",
    "scheme": "csi -script",
    "ocaml": "ocaml",
    "haskell": "runghc",
    "php": "php",
    "ruby": "ruby",
    "csharp": "scriptcs",
    "objective-c": "cd $dir && gcc -framework Cocoa $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "scala": "scala",
    "dart": "dart",
    "perl": "perl",
    "perl6": "perl6",
    "r": "Rscript",
    "lua": "lua",
    "groovy": "groovy",
    "powershell": "powershell -ExecutionPolicy ByPass -File",
    "bat": "cmd /c",
    "shellscript": "bash",
    "zig": "zig run",
    "fsharp": "fsi",
    "vbscript": "cscript //Nologo",
    "coffeescript": "coffee",
    "julia": "julia",
    "crystal": "crystal",
    "applescript": "osascript",
    "haxe": "haxe --cwd $dirWithoutTrailingSlash --run $fileNameWithoutExt",
    "racket": "racket",
    "ahk": "autohotkey",
    "autoit": "autoit3",
    "pascal": "cd $dir && fpc $fileName && $dir$fileNameWithoutExt",
    "d": "cd $dir && dmd $fileName && $dir$fileNameWithoutExt",
    "nim": "nim compile --verbosity:0 --hints:off --run",
    "kit": "kitc --run",
    "v": "v run",
    "sass": "sass --style expanded",
    "scss": "scss --style expanded",
    "less": "cd $dir && lessc $fileName $fileNameWithoutExt.css",
    "FortranFreeForm": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran-modern": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran_fixed-form": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "fortran": "cd $dir && gfortran $fileName -o $fileNameWithoutExt && $dir$fileNameWithoutExt",
    "sml": "cd $dir && sml $fileName",
    "mojo": "mojo run"
  },
  // 언어별 설정
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[java]": {
    "editor.tabSize": 4
  },
  "[kotlin]": {
    "editor.tabSize": 4
  },
  "[python]": { // ruff 포매터 사용
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "C_Cpp.default.cStandard": "c99",
  "C_Cpp.default.cppStandard": "gnu++20",
  "C_Cpp.default.compilerPath": "/opt/homebrew/bin/g++",
  "C_Cpp.refactoring.includeHeader": "never", // disable auto include
  "C_Cpp.intelliSenseUpdateDelay": 800,
  "C_Cpp.clang_format_style": "Google", // Google Styleguide
  "java.server.launchMode": "LightWeight",
  "java.jdt.ls.androidSupport.enabled": "off",
}
